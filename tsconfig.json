{
  "compilerOptions": {
    "target": "ES2015",
    "module": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",

    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true
  }
}
